@model Models.User

@{
    ViewData["Title"] = "Criar Conta";
}

<h1>Criar Conta</h1>

<h4>Usuário</h4>
<hr />
@if (ViewBag.User == "temp")
{
    <label class="text-danger font-weight-bold">Atenção: Você está utilizando uma conta temporária. Favor criar sua conta abaixo.</label>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="LogoutTemp">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="row h5">
        <div class="col-md-12">
            <span>Essa página é exclusiva para serviços temporários.</span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 p-0 m-1">
            <form method="post" asp-controller="Home" asp-action="Index">
                <input class="btn btn-link" type="submit" value="Voltar" />
            </form>
        </div>
    </div>
}


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}