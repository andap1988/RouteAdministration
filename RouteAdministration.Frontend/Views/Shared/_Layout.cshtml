@{
    string error = null;

	if (TempData["error"] != null)
	{
		error = (string)TempData["error"];
	}
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RouteAdministration.Frontend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Route Administration</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark border-right mr-1" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark border-right mr-1" asp-area="" asp-controller="Login" asp-action="Index">Usuário</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark border-right mr-1" asp-area="" asp-controller="Upload" asp-action="Index">Enviar Arquivo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark border-right mr-1" asp-area="" asp-controller="Person" asp-action="Index">Pessoas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark border-right mr-1" asp-area="" asp-controller="City" asp-action="Index">Cidades</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark border-right mr-1" asp-area="" asp-controller="Equip" asp-action="Index">Equipes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark border-right mr-1" asp-area="" asp-controller="Route" asp-action="Index">Rotas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark border-right mr-1" asp-area="" asp-controller="Download" asp-action="Index">Baixar Arquivos</a>
                        </li>
                    </ul>
                </div>
            </div>
            @if (string.IsNullOrEmpty(@ViewBag.Role))
            {
                <div class="col-2 text-center">
                    Olá, Visitante!
                    <form method="post" asp-controller="Login" asp-action="Index">
                        <input class="btn btn-link" type="submit" value="Entrar" />
                    </form>
                </div>
            }
            else
            {
                <div class="col-2 text-center">
                    Olá, @ViewBag.User!
                    <form method="post" asp-controller="Login" asp-action="Logout">
                        <input class="btn btn-link" type="submit" value="Sair?" />
                    </form>
                </div>
            }
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="exampleModalLabel">Erro</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">							
								<p>@error</p>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
						</div>
					</div>
				</div>
			</div>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Route Administration - Gerenciador de Rotas
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script type="text/javascript">
		@if (error != null)
		{
			<text>
					$("#exampleModal").modal("show")
			</text>
		}
	</script>
</body>
</html>
